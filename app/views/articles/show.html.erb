<p id="notice"><%= notice %></p>

<div class="article">
	<p class="title">
	  <%= @article.title %>
	</p>
	
	<p class="date">
		<%= @article.created_at %>
	</p>
	
	<p class="body">
	  <%= @article.body %>
	</p>
</div>

<%= link_to 'Edit', edit_article_path(@article), class: "btn-flat" %> |
<%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-flat" %> |
<%= link_to 'Back', root_path, class: "btn-flat" %>
