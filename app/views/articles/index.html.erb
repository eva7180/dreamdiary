<p id="notice"><%= notice %></p>

<h3>All Dreams</h3>

<% @articles.each do |article| %>
  <div class="article">
    <p class="dream-title"><%= link_to article.title, article %></p>
    <p class="date"><%= article.created_at %></p>
    <% article.category_ids.each do |id| %>
			<div class="chip"><%= Category.find(id).name %></div>
		<% end %>
    <p class="body"><%= article.body %></p>
    <%= link_to 'Show', article, class: "btn-flat" %> |
    <%= link_to 'Edit', edit_article_path(article), class: "btn-flat" %> |
    <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-flat" %>
  </div>
<% end %>

<br>

<%= link_to 'Create New Post', new_article_path, class: "btn" %>
